package programs;

import java.util.*;
import java.util.Scanner;

public class RevengeOfPancakes {

	public static void main(String[] args) {
		Scanner input = new Scanner(System.in);
		String s = input.next();
		int index = 0;
		for (int i = 0; i < s.length(); i++) {
			char a = s.charAt(0);
			while(s.charAt(i) == a){
				index++;
			}
		}
	}//End of Method
}//End of Main Class