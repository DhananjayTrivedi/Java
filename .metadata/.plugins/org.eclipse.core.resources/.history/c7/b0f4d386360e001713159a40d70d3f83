package programs;

import java.util.*;

public class test {

  public static void main(String[] args) {
	String s = "Hello World Game";
	int startIndex = 6;
	int endIndex = 10;
	Reverser(s, startIndex, endIndex);
	System.out.println(s);
  }

  private static String Reverser(String s,int startIndex, int endIndex) {
	String result = s.substring(0, startIndex);
	result += new StringBuilder(s.substring(startIndex, endIndex)).reverse().toString();
	result += s.substring(endIndex);
	return result;
  }
}