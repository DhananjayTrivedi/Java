package programs;

import java.util.*;
import java.util.Scanner;

public class RevengeOfPancakes {

	public static void main(String[] args) {
		Scanner input = new Scanner(System.in);
		String s = input.next();
		System.out.println(s);
		int index = 0;
		//Starting Pancakes
		String result = null;
		if(s.charAt(0) == '-'){
			for (int i = 0; i < s.length(); i++) {
				char a = s.charAt(i);
					if(a == '-'){
						index = i;
						continue;
					}
					else{
						break;
					}
			}
			//Flip and append the String
			result = new StringBuilder(s.substring(0, index+1)).replace(0, index, "+").reverse().toString();
			result += s.substring(index);
		}// End of Starting
		System.out.println(result);
	}
}
